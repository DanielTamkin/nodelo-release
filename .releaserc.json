{
  "branches": [
    "+([0-9])?(.{+([0-9]),x}).x",
    "master",
    "next",
    "next-major",
    {
      "name": "beta",
      "prerelease": "true"
    },
    {
      "name": "alpha",
      "prerelease": "true"
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "scope": "no-release",
            "release": false
          }
        ],
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "Features ğŸ‡",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "Bug Fixes ğŸ›",
              "hidden": false
            },
            {
              "type": "chore",
              "section": "Chores ğŸ§¹",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "Documentation ğŸ“š",
              "hidden": false
            },
            {
              "type": "style",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "Refactor ğŸ—",
              "hidden": false
            },
            {
              "type": "perf",
              "hidden": false
            },
            {
              "type": "test",
              "section": "Unit Tests ğŸ§ª",
              "hidden": false
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
