{
  "branches": [
    "+([0-9])?(.{+([0-9]),x}).x",
    "master",
    "next",
    "next-major",
    {
      "name": "beta",
      "prerelease": "true"
    },
    {
      "name": "alpha",
      "prerelease": "true"
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "scope": "no-release",
            "release": false
          }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "writerOpts": {
          "commitsSort": ["subject", "scope"]
        },
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "Features üéá",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "Bug Fixes üêõ",
              "hidden": false
            },
            {
              "type": "chore",
              "hidden": false
            },
            {
              "type": "docs",
              "hidden": false
            },
            {
              "type": "style",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "Refactor üèó",
              "hidden": false
            },
            {
              "type": "perf",
              "hidden": false
            },
            {
              "type": "test",
              "section": "Unit Tests üß™",
              "hidden": false
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "# Changes üíæ ‚ú®"
      }
    ],
    [
      "@semantic-release/npm"
    ],
    [
      "@semantic-release/github"
    ],
    "@semantic-release/git",
    [
      "semantic-release-plugin-update-version-in-files"
    ]
  ]
}
